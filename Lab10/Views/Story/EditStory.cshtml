@model Lab10.Models.Stories
@{
    ViewData["Title"] = "EditStory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditStory</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoriesID" />
            <div class="form-group">
                <label asp-for="storyName" class="control-label"></label>
                <input asp-for="storyName" class="form-control" />
                <span asp-validation-for="storyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="storyDescription" class="control-label"></label>
                <input asp-for="storyDescription" class="form-control" />
                <span asp-validation-for="storyDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Stories">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
