@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-new">
            <a class="nav-login" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-new">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-login btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-new">
            <a class="nav-login" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-new">
            <a class="nav-login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>